

<main class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Flats available</h2>
    <%= link_to "Add new flat", new_flat_path, class: "btn btn-primary" %>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% @flats.each do |flat| %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <% if flat.picture_url.present? %>
          <img src="<%= flat.picture_url %>" class="card-img-top" alt="<%= flat.name %>" style="height: 200px; object-fit: cover;">
        <% end %>

        <div class="card-body">
          <h5 class="card-title fw-bold"><%= flat.name %></h5>
          <p class="text-muted mb-2"><%= flat.address %></p>
          <div class="d-flex gap-3 mb-3 text-muted">
            <span><i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %></span>
            <span><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></span>
          </div>
          <%= link_to "More info", flat_path(flat), class: "text-decoration-none fw-semibold text-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
